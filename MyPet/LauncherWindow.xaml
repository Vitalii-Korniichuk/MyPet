<Window x:Class="MyPet.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPet"
        mc:Ignorable="d"
        Title="Launcher"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        
        <!--Navigation menu-->
        <Viewbox Style="{StaticResource NavigationMenu}" Grid.Column="0">
        <StackPanel>
            <RadioButton x:Name="GamesButton" Content="Games" Checked="GamesButton_Checked"/>
             <RadioButton x:Name="GalleryButton" Content="Gallery" Checked="GalleryButton_Checked"/>
                <RadioButton x:Name="SettingsButton" Content="Settings" Checked="SettingsButton_Checked"/>
            </StackPanel>
        </Viewbox>
        <GridSplitter Width="2"/>
        
        <!--Pages' frame-->
        <Frame x:Name="PageFrame" NavigationUIVisibility="Hidden" Source="/MyPet;component/Pages/WelcomePage.xaml"
               Grid.Column="1"/>
    </Grid>
</Window>
