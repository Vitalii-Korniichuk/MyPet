<Page x:Class="MyPet.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPet.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="GitHubButton" Grid.Column="0" Grid.Row="1" Click="GitHubButton_Click">
            <Image Source="/MyPet;component/Source/Images/Logos/github.png"/>
        </Button>
        <Button x:Name="LinkedInButton" Grid.Column="1" Grid.Row="1" Click="LinkedInButton_Click">
            <Image Source="/MyPet;component/Source/Images/Logos/linkedin.png"/>
        </Button>
        <Button x:Name="StackOverFlowButton" Grid.Column="2" Grid.Row="1" Click="StackOverFlowButton_Click">
            <Image Source="/MyPet;component/Source/Images/Logos/stackoverflow.png"/>
        </Button>
    </Grid>
</Page>
