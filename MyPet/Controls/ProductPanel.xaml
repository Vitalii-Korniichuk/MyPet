<UserControl x:Class="MyPet.Controls.ProductPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyPet.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox>
        <StackPanel>
            <Label x:Name="ProductLabel" Content="Product" Style="{StaticResource RegularLabel}"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="MinusButton" Content=" - " Style="{StaticResource LauncherButton}" Click="MinusButton_Click" Margin="0"/>
                <TextBox x:Name="NumberBox" Text=" 0 " Style="{StaticResource LauncherTextBox}" Margin="10 0" PreviewTextInput="NumberBox_PreviewTextInput"/>
                <Button x:Name="PlusButton" Content=" + " Style="{StaticResource LauncherButton}" Click="PlusButton_Click" Margin="0"/>
            </StackPanel>
        </StackPanel>
    </Viewbox>
</UserControl>
